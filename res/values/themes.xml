<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ThrifTeeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/headerbarcolor</item>
        <item name="android:navigationBarColor">@color/headerbarcolor</item>
<!--        <item name="android:windowTranslucentStatus">false</item>-->
<!--        <item name="android:windowTranslucentNavigation">false</item>-->

    </style>

    <style name="Theme.ThrifTeeApp" parent="Base.Theme.ThrifTeeApp" >
        <item name="android:statusBarColor">@color/headerbarcolor</item>
        <item name="android:navigationBarColor">@color/headerbarcolor</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:windowTranslucentStatus">false</item>-->

<!--        <item name="android:windowTranslucentNavigation">false</item>-->

    </style>



    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_favourites</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton"  parent="Base.Theme.ThrifTeeApp">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="roundimageview" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20sp</item>
        <item name="color">@color/white</item>

    </style>





    <style name="fonts_and_margins_Clothing" parent="">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="header_bar_style" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/headerbarcolor</item>
        <item name="android:padding">5sp</item>
        <item name="layout_constraintTop_toTopOf">@id/main</item>

    </style>

    <style name="BackButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/backarrow</item>
        <item name="android:background">@color/headerbarcolor</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">20sp</item>
        <item name="android:contentDescription">SearchButton</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
    </style>


    <style name="app_title_header_bar" parent="">
            <item name="android:text">@string/app_title</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_centerHorizontal">true</item>
            <item name="android:fontFamily">@font/inter_semibold</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">40sp</item>
            <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="categorys_text_view">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Section_Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="layout_constraintTop_toBottomOf">@id/header_bar</item>
    </style>







</resources>