<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ListActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:theme="@style/Base.Theme.ThrifTeeApp">

    <TextView
        android:id="@+id/emptyFavourites"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintBottom_toBottomOf="@id/main"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="Your Favourites is empty"
        style="@style/fonts_and_margins_Clothing"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/header_bar"
        style="@style/header_bar_style">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:src="@drawable/backarrow"
                android:background="@color/headerbarcolor"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp"
                android:contentDescription="SearchButton"
                android:minHeight="48dp"
                android:minWidth="48dp"/>

            
             <TextView
                  style="@style/app_title_header_bar" />

            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/searchbutton"
                android:background="@color/headerbarcolor"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20sp"
                android:contentDescription="SearchButton"
                android:minHeight="48dp"
                android:minWidth="48dp"/>

        </RelativeLayout>

  

    <TextView
        android:id="@+id/category_title"
        android:text="TEST"
        style="@style/Section_Title"
        />



            <GridView
                app:layout_constraintTop_toBottomOf="@id/category_title"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/gridview_clothing"
                android:numColumns="2"
                android:verticalSpacing="8dp"
                android:horizontalSpacing="8dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/main"
        android:id="@+id/bottom_navigation_layout"
        >

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:menu="@menu/bottom_navigation_menu"
                app:itemIconSize="40dp"
                app:itemActiveIndicatorStyle="@color/black"
                app:itemTextAppearanceActiveBoldEnabled="true"
                android:background="@color/headerbarcolor"
                />

        </LinearLayout>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>