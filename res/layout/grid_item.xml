<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5sp"
    android:gravity="center"
    android:id="@+id/grididlayoutclothing"
    android:layout_margin="16dp"
    android:background="@color/white"
    >

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:id="@+id/image_slider"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/favourites_button"
        android:layout_width="30dp"
        android:layout_height="34dp"
        android:layout_alignRight="@id/image_slider"
        android:background="@android:color/transparent"
        android:src="@drawable/favouritesbutton" />

    <LinearLayout
        android:id="@+id/layout_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_slider"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="TEST"
        android:layout_marginTop="6dp"
        android:id="@+id/gridname"
        android:layout_below="@id/layout_dots"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:fontFamily="@font/inter_semibold"
        android:textAlignment="center"
        android:lines="2"/>
    <TextView
        android:id="@+id/gridcost"
        android:text="COST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="13sp"
         android:layout_below="@id/gridname"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        style="@style/fonts_and_margins_Clothing"
        />


</RelativeLayout>